<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>On This Date</title>
  </head>

  <body>
    <h1>On This Date</h1>
    <form id="date" method="post">
      <label for="day">Day: </label>
      <select name="day" id="day"></select>
      <label for="month">Month: </label>
      <select name="month" id="month" onchange="days()">
        <option value="1">January</option>
        <option value="2">February</option>
        <option value="3">March</option>
        <option value="4">April</option>
        <option value="5">May</option>
        <option value="6">June</option>
        <option value="7">July</option>
        <option value="8">August</option>
        <option value="9">September</option>
        <option value="10">October</option>
        <option value="11">November</option>
        <option value="12">December</option>
      </select>
			<br><br>
			<input type="submit" value="Submit" onclick="toSelected()">
			<input type="button" value="Show Previous Events" onclick="toEvents()">
    </form>
  </body>

  <body style = "border:3px solid red; padding: 5px;width:20rem; background-color:antiquewhite"></body>

  <script>
    let text = "";
    for (i = 1; i <= 31; i++) {
      text += `<option value="${i}">${i}</option>`;
    }
    document.getElementById("day").innerHTML = text;

    function main() {}

    let days = () => {
      const month = document.getElementById("month").value;
      const months = new Map([
        ["1", 31],
        ["2", 29],
        ["3", 31],
        ["4", 30],
        ["5", 31],
        ["6", 30],
        ["7", 31],
        ["8", 31],
        ["9", 30],
        ["10", 31],
        ["11", 30],
        ["12", 31],
      ]);
      let day = document.getElementById("day");
      let text = "";
      for (i = 1; i <= months.get(month); i++) {
        text += `<option value="${i}">${i}</option>`;
      }
      day.innerHTML = text;
    };

		let toEvents = () => {
			document.getElementById("date").action = "https://onthisdate.onrender.com/previousEvents";
			document.getElementById("date").submit();
		};

		let toSelected = () => {
			document.getElementById("date").action = "https://onthisdate.onrender.com/selectedDate";
			document.getElementById("date").submit();
		};
  </script>
</html>

